<?xml version="1.0"?>
<config>
    <modules>
        <Peerforest_ExtraConfig>
            <version>1.0.0</version>
            <depends>
            <!-- no dependencies -->
            </depends>
        </Peerforest_ExtraConfig>
    </modules>
	<global>
	    <models>
		<ExtraConfig>
		    <class>Peerforest_ExtraConfig_Model</class>
		</ExtraConfig>
		<catalog>
		    <rewrite>
			<observer>Peerforest_ExtraConfig_Model_Catalog_Observer</observer>
			<!--<resource_category_flat>Peerforest_ExtraConfig_Model_Resource_Category_Flat</resource_category_flat>-->
		    </rewrite>
		</catalog>
	    </models>
	    <helpers>
		<ExtraConfig>
			<class>Peerforest_ExtraConfig_Helper</class>
		</ExtraConfig>
	    </helpers>
	    <resources>
		<add_category_attribute>
		    <setup>
			<module>Peerforest_ExtraConfig</module>
			<class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
		    </setup>
		    <connection>
			<use>core_setup</use>
		    </connection>
		</add_category_attribute>
		<add_category_attribute_write>
		    <connection>
			<use>core_write</use>
		    </connection>
		</add_category_attribute_write>
		<add_category_attribute_read>
		    <connection>
			<use>core_read</use>
		    </connection>
		</add_category_attribute_read>
	    </resources>
	    <extraconfig />
	    <blocks>
		<mygeneral><class>Peerforest_ExtraConfig_Block</class></mygeneral>
		<catalog>
		    <rewrite>
			<product_manufacturer>Peerforest_ExtraConfig_Block_Product_Manufacturer</product_manufacturer>
		    </rewrite>
		</catalog>
		<wishlist>
		    <rewrite>
			<links>Peerforest_ExtraConfig_Block_Wishlist_Links</links>
		    </rewrite>
		</wishlist>
		<page> 		    
		    <layouts>
			<category module="page" translate="label">
				<label>Category</label>
				<template>page/category.phtml</template>
				<layout_handle>page_category</layout_handle>
			</category>
		    </layouts>
		</page>
	    </blocks>
	</global>
	<frontend>
	    <category>
		<collection>
		    <attributes>
			<category_label />
			<category_block_position /><!-- your attribute code here -->
			<custom_block_position />
		    </attributes>
		</collection>
	    </category>
	</frontend>
	<!---->
	<default>
	    <mygeneral>
		
		<header>
		    <sticky_header>0</sticky_header>
		    <displayheader_wishlistbox>1</displayheader_wishlistbox>
		    <display_header_bottom_border>1</display_header_bottom_border>
		</header>
		
		<menu>
		    <homelink>1</homelink>
		    <menuwidth>1</menuwidth>
		    <categoryimage>1</categoryimage>
		    <enable>1</enable>
		</menu>
		<home>
		    <enable>1</enable>
		    <brandlogolimit>8</brandlogolimit>
		</home>
		<banner>
		    <bannerwidth>0</bannerwidth>
		    <breakpoint>0</breakpoint>
		</banner>
		<product_slider>		    
		    <stop_on_hover>1</stop_on_hover>
		    <rewind_nav>0</rewind_nav>
		    <scroll_per_page>1</scroll_per_page>
		</product_slider>		
		<product_list>
		    <ajaxcart>2</ajaxcart>
		    <ajaxpopup>1</ajaxpopup>
		    <enable_alter>1</enable_alter>
		    <alter_image>sortorder</alter_image>
		    <alter_image_value>2</alter_image_value>
		    <newsaleicon>1</newsaleicon>
		    <display_comparelink>off</display_comparelink>
		    <display_wishlistlink>onhover</display_wishlistlink>
		    <display_productname>on</display_productname>
		    <display_productprice>on</display_productprice>
		    <display_productratings>off</display_productratings>
		    <display_productaddtocart>onhover</display_productaddtocart>
		    <product_shadow_enable>onhover</product_shadow_enable>
		    <product_hover_border_onoff>1</product_hover_border_onoff>
		</product_list>		
		<category>
		    <column_count>3</column_count>
		    <displaycategorysidebar>left</displaycategorysidebar>
		    <sidebarmenu>1</sidebarmenu>
		    <sidebar_title_border_onoff>1</sidebar_title_border_onoff>
		</category>
		<product_view>
		    <column1>4</column1>
		    <column2>5</column2>
		    <display_column3>1</display_column3>
		    <column3>3</column3>
		    <sharingicon>1</sharingicon>
		    <brandlogo>1</brandlogo>
		    <instock>1</instock>
		    <sku>1</sku>
		    <product_thumnail_slider>y</product_thumnail_slider>
		</product_view>
		<staticblock>
		    <topblock>1</topblock>
		    <bottomblock>0</bottomblock>
		    <brandblock>0</brandblock>
		    <bestsellerblock>0</bestsellerblock>
		</staticblock>
		<extra_settings>
		    <backtotop>1</backtotop>
		    <boxlayout>0</boxlayout>
		    <customcss>0</customcss>
		</extra_settings>		
	    </mygeneral>
	    <themelayout>
		<layout>
		    <responsiveness>1</responsiveness>
		    <layout_width>1280</layout_width>
		    <fluid_width>0</fluid_width>
		</layout>
	    </themelayout>
		
	</default>
	<!---->
    <adminhtml>
	<events>            	
	    <controller_action_postdispatch_adminhtml_system_config_save>
		    <observers>
			    <ExtraConfig>
				    <type>singleton</type>
				    <class>ExtraConfig/observer</class>
				    <method>hookOverWriteCss</method>
			    </ExtraConfig>
		    </observers>
	    </controller_action_postdispatch_adminhtml_system_config_save>			
    </events>
        <layout>
            <updates>
                <ExtraConfig>
                    <file>themeoptions.xml</file>
                </ExtraConfig>
            </updates>
        </layout>
    </adminhtml>     
</config>
